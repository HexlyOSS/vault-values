{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "prefer-spread": "warn",
    "semi": "off",
    "prefer-arrow-callback": "warn"
  }
}